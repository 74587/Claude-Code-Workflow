/* CSS Variables */
:root {
  /* Background */
  --bg-primary: #f8f9fa;
  --bg-secondary: #ffffff;
  --bg-card: #ffffff;
  --bg-sidebar: #f1f3f5;
  --bg-hover: #e9ecef;

  /* Text */
  --text-primary: #212529;
  --text-secondary: #495057;
  --text-muted: #868e96;

  /* Accent */
  --accent-color: #228be6;
  --accent-hover: #1c7ed6;
  --accent-light: #e7f5ff;

  /* Status */
  --success-color: #40c057;
  --success-light: #d3f9d8;
  --warning-color: #fab005;
  --warning-light: #fff3bf;
  --danger-color: #fa5252;
  --danger-light: #ffe3e3;
  --info-color: #339af0;
  --info-light: #d0ebff;

  /* Border & Shadow */
  --border-color: #dee2e6;
  --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
  --shadow: 0 2px 8px rgba(0,0,0,0.08);
  --shadow-lg: 0 4px 16px rgba(0,0,0,0.12);

  /* Spacing */
  --sidebar-width: 260px;
  --sidebar-collapsed: 60px;
  --header-height: 56px;
  --footer-height: 40px;
  --radius: 8px;
  --radius-sm: 4px;
}

[data-theme="dark"] {
  --bg-primary: #1a1b1e;
  --bg-secondary: #25262b;
  --bg-card: #2c2e33;
  --bg-sidebar: #25262b;
  --bg-hover: #373a40;

  --text-primary: #c1c2c5;
  --text-secondary: #909296;
  --text-muted: #5c5f66;

  --accent-light: #1c3a5e;
  --success-light: #1d3d2a;
  --warning-light: #3d3520;
  --danger-light: #3d2020;
  --info-light: #1c3a5e;

  --border-color: #373a40;
}

/* Reset & Base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background: var(--bg-primary);
  color: var(--text-primary);
  line-height: 1.5;
}

/* App Container */
.app-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* Top Bar */
.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  height: var(--header-height);
  background: var(--bg-card);
  border-bottom: 1px solid var(--border-color);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: var(--shadow-sm);
}

.top-bar-left {
  display: flex;
  align-items: center;
  gap: 16px;
}

.menu-toggle {
  display: none;
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
  padding: 4px 8px;
  color: var(--text-primary);
}

.logo {
  font-size: 18px;
  font-weight: 600;
  color: var(--accent-color);
  display: flex;
  align-items: center;
  gap: 8px;
}

.logo-icon {
  font-size: 24px;
}

/* Path Selector */
.path-selector {
  display: flex;
  align-items: center;
  gap: 8px;
  position: relative;
}

.path-selector label {
  color: var(--text-muted);
  font-size: 13px;
}

.path-dropdown {
  position: relative;
}

.path-current {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 12px;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 13px;
  color: var(--text-primary);
  max-width: 300px;
}

.path-current:hover {
  background: var(--bg-hover);
}

.path-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 240px;
}

.dropdown-arrow {
  font-size: 10px;
  color: var(--text-muted);
  transition: transform 0.2s;
}

.path-menu {
  position: absolute;
  top: 100%;
  left: 0;
  margin-top: 4px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  box-shadow: var(--shadow-lg);
  min-width: 280px;
  display: none;
  z-index: 200;
}

.path-menu.open {
  display: block;
}

.menu-label {
  padding: 8px 12px;
  font-size: 11px;
  font-weight: 600;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.path-item {
  padding: 8px 12px;
  cursor: pointer;
  font-size: 13px;
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.path-item:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.path-item.active {
  background: var(--accent-light);
  color: var(--accent-color);
}

.path-actions {
  padding: 8px 12px;
  border-top: 1px solid var(--border-color);
}

.path-browse {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 13px;
  color: var(--text-secondary);
  width: 100%;
  justify-content: center;
}

.path-browse:hover {
  background: var(--bg-hover);
}

/* Header Actions */
.header-actions {
  display: flex;
  align-items: center;
  gap: 12px;
}

.theme-toggle {
  background: none;
  border: none;
  font-size: 20px;
  cursor: pointer;
  padding: 6px;
  border-radius: var(--radius-sm);
  color: var(--text-secondary);
}

.theme-toggle:hover {
  background: var(--bg-hover);
}

/* Main Layout */
.main-layout {
  display: flex;
  flex: 1;
}

/* Sidebar */
.sidebar {
  width: var(--sidebar-width);
  background: var(--bg-sidebar);
  border-right: 1px solid var(--border-color);
  display: flex;
  flex-direction: column;
  position: sticky;
  top: var(--header-height);
  height: calc(100vh - var(--header-height));
  overflow-y: auto;
  transition: width 0.3s ease, transform 0.3s ease;
}

.sidebar.collapsed {
  width: var(--sidebar-collapsed);
}

.sidebar.collapsed .nav-text,
.sidebar.collapsed .nav-section-title,
.sidebar.collapsed .badge {
  display: none;
}

.sidebar.collapsed .nav-section-header {
  justify-content: center;
  padding: 12px 0;
}

.sidebar.collapsed .nav-item {
  justify-content: center;
  padding: 10px 0;
}

.sidebar.collapsed .nav-icon {
  margin: 0;
}

/* Sidebar Navigation */
.sidebar-nav {
  flex: 1;
  padding: 12px 0;
}

.nav-section {
  margin-bottom: 8px;
}

.nav-section-header {
  display: flex;
  align-items: center;
  padding: 8px 16px;
  font-size: 11px;
  font-weight: 600;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.nav-icon {
  font-size: 16px;
  margin-right: 8px;
}

.nav-items {
  list-style: none;
}

.nav-item {
  display: flex;
  align-items: center;
  padding: 10px 16px 10px 24px;
  cursor: pointer;
  font-size: 14px;
  color: var(--text-secondary);
  transition: all 0.15s ease;
  position: relative;
}

.nav-item:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.nav-item.active {
  background: var(--accent-light);
  color: var(--accent-color);
  font-weight: 500;
}

.nav-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3px;
  background: var(--accent-color);
}

.nav-item .nav-icon {
  font-size: 14px;
  margin-right: 10px;
}

.nav-text {
  flex: 1;
}

.badge {
  padding: 2px 8px;
  font-size: 11px;
  font-weight: 600;
  border-radius: 10px;
  background: var(--bg-hover);
  color: var(--text-muted);
}

.badge.success {
  background: var(--success-light);
  color: var(--success-color);
}

.badge.warning {
  background: var(--warning-light);
  color: var(--warning-color);
}

.badge.danger {
  background: var(--danger-light);
  color: var(--danger-color);
}

.badge.info {
  background: var(--info-light);
  color: var(--info-color);
}

/* Sidebar Footer */
.sidebar-footer {
  padding: 12px;
  border-top: 1px solid var(--border-color);
}

.sidebar-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 8px;
  background: none;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 13px;
  color: var(--text-secondary);
  transition: all 0.15s ease;
}

.sidebar-toggle:hover {
  background: var(--bg-hover);
}

.sidebar.collapsed .sidebar-toggle {
  padding: 8px 4px;
}

.sidebar.collapsed .toggle-text {
  display: none;
}

.toggle-icon {
  transition: transform 0.3s ease;
}

.sidebar.collapsed .toggle-icon {
  transform: rotate(180deg);
}

/* Content Area */
.content {
  flex: 1;
  padding: 24px;
  overflow-y: auto;
  min-width: 0;
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 16px;
  margin-bottom: 24px;
}

.stat-card {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  padding: 20px;
  text-align: center;
  transition: all 0.2s ease;
}

.stat-card:hover {
  box-shadow: var(--shadow);
  transform: translateY(-2px);
}

.stat-icon {
  font-size: 24px;
  margin-bottom: 8px;
}

.stat-value {
  font-size: 32px;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1.2;
}

.stat-label {
  font-size: 13px;
  color: var(--text-muted);
  margin-top: 4px;
}

/* Content Header */
.content-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
  flex-wrap: wrap;
  gap: 12px;
}

.content-title {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
}

.search-box {
  position: relative;
}

.search-box input {
  padding: 8px 12px 8px 36px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  background: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 14px;
  width: 240px;
  transition: all 0.15s ease;
}

.search-box input:focus {
  outline: none;
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px var(--accent-light);
}

.search-box::before {
  content: 'üîç';
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 14px;
}

/* Sessions Grid */
.sessions-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
  gap: 20px;
}

/* Session Card */
.session-card {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  overflow: hidden;
  transition: all 0.2s ease;
}

.session-card:hover {
  box-shadow: var(--shadow);
  transform: translateY(-2px);
}

.session-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid var(--border-color);
}

.session-title {
  font-size: 15px;
  font-weight: 600;
  color: var(--text-primary);
}

.session-status {
  padding: 4px 10px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  border-radius: 12px;
}

.session-status.active {
  background: var(--success-light);
  color: var(--success-color);
}

.session-status.archived {
  background: var(--bg-hover);
  color: var(--text-muted);
}

.session-body {
  padding: 16px;
}

.session-meta {
  display: flex;
  align-items: center;
  gap: 16px;
  font-size: 13px;
  color: var(--text-muted);
  margin-bottom: 12px;
}

.session-meta-item {
  display: flex;
  align-items: center;
  gap: 4px;
}

/* Progress Bar */
.progress-container {
  margin-bottom: 16px;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: var(--text-muted);
  margin-bottom: 6px;
}

.progress-bar {
  height: 8px;
  background: var(--bg-hover);
  border-radius: 4px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--accent-color), var(--success-color));
  border-radius: 4px;
  transition: width 0.3s ease;
}

/* Tasks List */
.tasks-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.task-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 12px;
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  border-left: 3px solid var(--border-color);
  transition: all 0.15s ease;
}

.task-item:hover {
  transform: translateX(4px);
}

.task-item.completed {
  border-left-color: var(--success-color);
}

.task-item.in_progress {
  border-left-color: var(--warning-color);
}

.task-item.pending {
  border-left-color: var(--text-muted);
}

.task-checkbox {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  border: 2px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  flex-shrink: 0;
}

.task-item.completed .task-checkbox {
  background: var(--success-color);
  border-color: var(--success-color);
  color: white;
}

.task-item.in_progress .task-checkbox {
  border-color: var(--warning-color);
  color: var(--warning-color);
}

.task-title {
  flex: 1;
  font-size: 13px;
  color: var(--text-primary);
}

.task-id {
  font-size: 11px;
  font-family: monospace;
  color: var(--text-muted);
}

/* Session Footer */
.session-footer {
  padding: 12px 16px;
  border-top: 1px solid var(--border-color);
  font-size: 12px;
  color: var(--text-muted);
  background: var(--bg-secondary);
}

/* Reviews Container */
.reviews-container {
  display: none;
}

.reviews-container.active {
  display: block;
}

/* Review Dimension Card */
.review-dimension {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  margin-bottom: 16px;
  overflow: hidden;
}

.dimension-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  background: var(--bg-secondary);
  cursor: pointer;
}

.dimension-title {
  font-size: 15px;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8px;
}

.dimension-count {
  font-size: 13px;
  color: var(--text-muted);
}

.dimension-body {
  padding: 16px;
}

.finding-item {
  padding: 12px;
  border-radius: var(--radius-sm);
  margin-bottom: 8px;
  border-left: 3px solid;
}

.finding-item.critical {
  background: var(--danger-light);
  border-left-color: var(--danger-color);
}

.finding-item.high {
  background: var(--warning-light);
  border-left-color: var(--warning-color);
}

.finding-item.medium {
  background: var(--info-light);
  border-left-color: var(--info-color);
}

.finding-item.low {
  background: var(--bg-secondary);
  border-left-color: var(--text-muted);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: var(--text-muted);
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
}

.empty-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.empty-text {
  font-size: 14px;
}

/* Footer */
.bottom-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  height: var(--footer-height);
  background: var(--bg-card);
  border-top: 1px solid var(--border-color);
  font-size: 12px;
  color: var(--text-muted);
}

/* Mobile Overlay */
.sidebar-overlay {
  display: none;
  position: fixed;
  top: var(--header-height);
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 150;
}

.sidebar-overlay.open {
  display: block;
}

/* Responsive */
@media (max-width: 768px) {
  .menu-toggle {
    display: block;
  }

  .logo-text {
    display: none;
  }

  .path-selector label {
    display: none;
  }

  .path-text {
    max-width: 120px;
  }

  .sidebar {
    position: fixed;
    left: calc(-1 * var(--sidebar-width));
    top: var(--header-height);
    height: calc(100vh - var(--header-height));
    z-index: 200;
    box-shadow: var(--shadow-lg);
  }

  .sidebar.open {
    left: 0;
  }

  .sessions-container {
    grid-template-columns: 1fr;
  }

  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .search-box input {
    width: 100%;
  }

  .content-header {
    flex-direction: column;
    align-items: stretch;
  }
}

/* Tooltip */
.tooltip {
  position: relative;
}

.tooltip::after {
  content: attr(data-tooltip);
  position: absolute;
  left: 100%;
  top: 50%;
  transform: translateY(-50%);
  margin-left: 8px;
  padding: 6px 10px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  font-size: 12px;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: all 0.15s ease;
  box-shadow: var(--shadow);
  z-index: 100;
}

.sidebar.collapsed .tooltip:hover::after {
  opacity: 1;
  visibility: visible;
}

/* Path Modal */
.path-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.path-modal {
  background: var(--bg-card);
  border-radius: var(--radius);
  box-shadow: var(--shadow-lg);
  width: 90%;
  max-width: 480px;
  overflow: hidden;
}

.path-modal-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 20px 24px;
  border-bottom: 1px solid var(--border-color);
}

.path-modal-header h3 {
  font-size: 16px;
  font-weight: 600;
  margin: 0;
}

.path-modal-icon {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--accent-light);
  border-radius: var(--radius);
  color: var(--accent-color);
}

.path-modal-icon svg {
  width: 20px;
  height: 20px;
  stroke: currentColor;
  stroke-width: 2;
  fill: none;
}

.path-modal-body {
  padding: 24px;
}

.path-modal-body p {
  color: var(--text-secondary);
  font-size: 14px;
  margin: 0 0 16px 0;
}

.selected-folder {
  padding: 12px 16px;
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  margin-bottom: 16px;
  font-size: 14px;
}

.path-modal-note {
  font-size: 13px !important;
  color: var(--text-muted) !important;
}

.path-modal-command {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 16px;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  margin-bottom: 16px;
}

.path-modal-command code {
  flex: 1;
  font-family: 'SF Mono', Monaco, 'Cascadia Code', monospace;
  font-size: 13px;
  color: var(--text-primary);
  word-break: break-all;
}

.path-placeholder {
  color: var(--text-muted);
  font-style: italic;
}

.copy-btn {
  display: flex;
  align-items: center;
  gap: 4px;
  padding: 6px 12px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  font-size: 12px;
  color: var(--text-secondary);
  cursor: pointer;
  white-space: nowrap;
  transition: all 0.15s ease;
}

.copy-btn:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.copy-btn svg {
  width: 14px;
  height: 14px;
  stroke: currentColor;
  stroke-width: 2;
  fill: none;
  stroke-linecap: round;
  stroke-linejoin: round;
}

.path-input-group {
  margin-top: 16px;
}

.path-input-group label {
  display: block;
  font-size: 13px;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.path-input-group input {
  flex: 1;
  padding: 10px 12px;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  background: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 14px;
  width: calc(100% - 70px);
  margin-right: 8px;
}

.path-input-group input:focus {
  outline: none;
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px var(--accent-light);
}

.path-go-btn {
  padding: 10px 20px;
  background: var(--accent-color);
  color: white;
  border: none;
  border-radius: var(--radius-sm);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: background 0.15s ease;
}

.path-go-btn:hover {
  background: var(--accent-hover);
}

.path-modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 8px;
  padding: 16px 24px;
  border-top: 1px solid var(--border-color);
  background: var(--bg-secondary);
}

.path-modal-close {
  padding: 8px 20px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  font-size: 14px;
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.15s ease;
}

.path-modal-close:hover {
  background: var(--bg-hover);
}

/* SVG Icons */
.icon-svg {
  width: 16px;
  height: 16px;
  stroke: currentColor;
  stroke-width: 2;
  fill: none;
  stroke-linecap: round;
  stroke-linejoin: round;
  flex-shrink: 0;
}

/* Lite Task Cards */
.lite-task-card {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  overflow: hidden;
}

.lite-task-card .card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-secondary);
}

.lite-task-card .session-id-badge {
  font-family: monospace;
  font-size: 12px;
  padding: 4px 8px;
  background: var(--accent-light);
  color: var(--accent-color);
  border-radius: var(--radius-sm);
  font-weight: 600;
}

.lite-task-card .type-badge {
  font-size: 11px;
  padding: 2px 8px;
  border-radius: 10px;
  text-transform: uppercase;
  font-weight: 600;
}

.lite-task-card .type-badge.lite-plan {
  background: var(--info-light);
  color: var(--info-color);
}

.lite-task-card .type-badge.lite-fix {
  background: var(--warning-light);
  color: var(--warning-color);
}

.lite-task-card .card-meta {
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 16px;
  font-size: 13px;
  color: var(--text-secondary);
  border-bottom: 1px solid var(--border-color);
}

.lite-task-card .progress-bar {
  flex: 1;
  height: 6px;
  background: var(--bg-hover);
  border-radius: 3px;
  overflow: hidden;
}

.lite-task-card .progress-fill {
  height: 100%;
  background: var(--success-color);
  border-radius: 3px;
  transition: width 0.3s ease;
}

.lite-task-card .tasks-container {
  padding: 16px;
}

/* Task Detail */
.task-detail {
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  margin-bottom: 12px;
  overflow: hidden;
}

.task-detail-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
  flex-wrap: wrap;
}

.task-id-badge {
  font-family: monospace;
  font-size: 12px;
  padding: 4px 10px;
  background: var(--accent-light);
  color: var(--accent-color);
  border-radius: var(--radius-sm);
  font-weight: 600;
}

.task-detail-header .task-title {
  flex: 1;
  font-size: 14px;
  font-weight: 500;
  color: var(--text-primary);
}

.task-status-badge {
  font-size: 11px;
  padding: 3px 10px;
  border-radius: 10px;
  text-transform: uppercase;
  font-weight: 600;
}

.task-status-badge.pending {
  background: var(--bg-hover);
  color: var(--text-muted);
}

.task-status-badge.active,
.task-status-badge.in_progress {
  background: var(--info-light);
  color: var(--info-color);
}

.task-status-badge.completed {
  background: var(--success-light);
  color: var(--success-color);
}

.task-status-badge.blocked {
  background: var(--danger-light);
  color: var(--danger-color);
}

.task-header-actions {
  margin-left: auto;
  display: flex;
  gap: 8px;
}

.btn-view-json {
  padding: 4px 10px;
  font-size: 11px;
  background: var(--bg-hover);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.15s ease;
}

.btn-view-json:hover {
  background: var(--accent-light);
  color: var(--accent-color);
  border-color: var(--accent-color);
}

/* Collapsible Sections */
.collapsible-section {
  border-top: 1px solid var(--border-color);
}

.collapsible-header {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  cursor: pointer;
  background: var(--bg-card);
  transition: background 0.15s ease;
  user-select: none;
}

.collapsible-header:hover {
  background: var(--bg-hover);
}

.collapse-icon {
  font-size: 10px;
  color: var(--text-muted);
  transition: transform 0.2s ease;
  width: 12px;
}

.collapsible-header.expanded .collapse-icon {
  transform: rotate(90deg);
}

.section-label {
  font-family: monospace;
  font-size: 13px;
  font-weight: 600;
  color: var(--text-primary);
}

.section-preview {
  font-size: 12px;
  color: var(--text-muted);
  margin-left: auto;
}

.collapsible-content {
  padding: 16px;
  background: var(--bg-secondary);
  max-height: 800px;
  overflow-y: auto;
  transition: max-height 0.3s ease, padding 0.3s ease;
}

.collapsible-content.collapsed {
  max-height: 0;
  padding: 0 16px;
  overflow: hidden;
}

/* JSON Preview */
.json-preview {
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  font-size: 12px;
  line-height: 1.6;
  padding: 12px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
  color: var(--text-secondary);
  margin: 0;
}

/* Context Fields */
.context-fields {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.context-field {
  padding: 12px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
}

.context-field label {
  display: block;
  font-family: monospace;
  font-size: 12px;
  font-weight: 600;
  color: var(--accent-color);
  margin-bottom: 8px;
}

.context-field ul {
  list-style: disc;
  padding-left: 20px;
  margin: 0;
}

.context-field li {
  font-size: 13px;
  color: var(--text-secondary);
  padding: 4px 0;
}

.path-tag {
  display: inline-block;
  font-family: monospace;
  font-size: 11px;
  padding: 2px 8px;
  background: var(--bg-hover);
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  margin: 2px 4px 2px 0;
}

/* Flowchart Container */
.flowchart-container {
  min-height: 100px;
  padding: 16px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  overflow-x: auto;
}

.flowchart-svg {
  display: block;
  margin: 0 auto;
}

.flowchart-node rect {
  stroke: var(--border-color);
  stroke-width: 1.5;
}

.flowchart-node text {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-size: 12px;
}

.flowchart-node circle {
  stroke: var(--border-color);
  stroke-width: 1.5;
}

.flowchart-fallback {
  text-align: center;
  padding: 32px;
  color: var(--text-muted);
  font-size: 14px;
}

/* Empty State for Lite Tasks */
.empty-state .empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
  opacity: 0.5;
}

.empty-state h3 {
  font-size: 18px;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.empty-state p {
  font-size: 14px;
}

/* JSON Modal */
.json-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s ease;
}

.json-modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

.json-modal {
  background: var(--bg-card);
  border-radius: var(--radius);
  box-shadow: var(--shadow-lg);
  width: 90%;
  max-width: 900px;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  transform: scale(0.95);
  transition: transform 0.2s ease;
}

.json-modal-overlay.active .json-modal {
  transform: scale(1);
}

.json-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid var(--border-color);
}

.json-modal-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 10px;
}

.json-modal-close {
  background: none;
  border: none;
  font-size: 24px;
  color: var(--text-muted);
  cursor: pointer;
  padding: 4px;
  line-height: 1;
}

.json-modal-close:hover {
  color: var(--text-primary);
}

.json-modal-body {
  flex: 1;
  overflow: auto;
  padding: 20px;
}

.json-modal-content {
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  font-size: 13px;
  line-height: 1.6;
  white-space: pre-wrap;
  word-break: break-word;
  color: var(--text-secondary);
}

.json-modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  padding: 12px 20px;
  border-top: 1px solid var(--border-color);
}

.btn-copy-json {
  padding: 8px 16px;
  font-size: 13px;
  background: var(--accent-color);
  border: none;
  border-radius: var(--radius-sm);
  color: white;
  cursor: pointer;
  transition: background 0.15s ease;
}

.btn-copy-json:hover {
  background: var(--accent-hover);
}

/* Enhanced JSON Value Rendering */
.json-value {
  padding: 8px 12px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  margin-bottom: 8px;
}

.json-value-string {
  color: var(--success-color);
}

.json-value-number {
  color: var(--accent-color);
}

.json-value-boolean {
  color: var(--warning-color);
}

.json-value-null {
  color: var(--text-muted);
  font-style: italic;
}

.json-key {
  color: var(--accent-color);
  font-weight: 600;
}

/* Dynamic Field Groups */
.field-group {
  margin-bottom: 12px;
}

.field-group-title {
  font-size: 12px;
  font-weight: 600;
  color: var(--text-muted);
  text-transform: uppercase;
  margin-bottom: 8px;
  padding-bottom: 4px;
  border-bottom: 1px solid var(--border-color);
}

.field-row {
  display: flex;
  align-items: flex-start;
  padding: 6px 0;
  border-bottom: 1px solid var(--border-color);
}

.field-row:last-child {
  border-bottom: none;
}

.field-label {
  min-width: 120px;
  font-family: monospace;
  font-size: 12px;
  font-weight: 600;
  color: var(--accent-color);
  padding-right: 12px;
}

.field-value {
  flex: 1;
  font-size: 13px;
  color: var(--text-secondary);
  word-break: break-word;
}

.field-value.array-value {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
}

.array-item {
  display: inline-block;
  padding: 2px 8px;
  background: var(--bg-hover);
  border-radius: var(--radius-sm);
  font-size: 12px;
}

.array-item.path-item {
  font-family: monospace;
  background: var(--accent-light);
  color: var(--accent-color);
}

.depends-badge {
  background: var(--warning-light);
  color: var(--warning-color);
  font-family: monospace;
  font-weight: 600;
}

/* All Fields Section */
.all-fields-section {
  margin-top: 8px;
}

.all-fields-toggle {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  background: var(--bg-secondary);
  border: 1px dashed var(--border-color);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 12px;
  color: var(--text-muted);
  transition: all 0.15s ease;
}

.all-fields-toggle:hover {
  background: var(--bg-hover);
  color: var(--text-secondary);
}

.all-fields-content {
  margin-top: 8px;
  padding: 12px;
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
}

/* Modification Points */
.mod-points {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.mod-point {
  padding: 10px 12px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  border-left: 3px solid var(--accent-color);
}

.mod-target {
  display: inline-block;
  margin-left: 8px;
  font-size: 12px;
  color: var(--text-muted);
}

.mod-change {
  margin-top: 8px;
  font-size: 13px;
  color: var(--text-secondary);
  line-height: 1.5;
}

/* Nested Array Objects */
.nested-array {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.array-object {
  padding: 10px 12px;
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
}

.array-object-header {
  font-size: 11px;
  font-weight: 600;
  color: var(--text-muted);
  margin-bottom: 8px;
  padding-bottom: 4px;
  border-bottom: 1px solid var(--border-color);
}

/* Array Value Display */
.array-value {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
}

/* Task List in Session Card */
.tasks-detail-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

/* Session Card Enhancements */
.session-card .progress-container {
  margin: 12px 0;
}

.session-card .progress-header {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: var(--text-muted);
  margin-bottom: 6px;
}

.session-card .progress-bar {
  height: 6px;
  background: var(--bg-hover);
  border-radius: 3px;
  overflow: hidden;
}

.session-card .progress-fill {
  height: 100%;
  background: var(--success-color);
  border-radius: 3px;
  transition: width 0.3s ease;
}

/* Session Card Improvements */
.session-card {
  cursor: pointer;
}

.session-badges {
  display: flex;
  gap: 6px;
  align-items: center;
}

.session-type-badge {
  display: inline-block;
  padding: 2px 8px;
  border-radius: var(--radius-sm);
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
}

.session-type-badge.review {
  background: var(--accent-light);
  color: var(--accent-color);
}

.session-type-badge.test {
  background: var(--warning-light);
  color: var(--warning-color);
}

.session-type-badge.docs {
  background: var(--success-light);
  color: var(--success-color);
}

.session-type-badge.tdd {
  background: var(--info-light, #e0f2fe);
  color: var(--info-color, #0284c7);
}

.session-type-badge.workflow {
  background: var(--bg-hover);
  color: var(--text-muted);
}

.progress-bar-wrapper {
  display: flex;
  align-items: center;
  gap: 8px;
}

.progress-bar-wrapper .progress-bar {
  flex: 1;
}

.progress-label {
  font-size: 11px;
  color: var(--text-muted);
  min-width: 50px;
}

.progress-text {
  font-size: 11px;
  color: var(--text-muted);
  white-space: nowrap;
}

/* Session Detail Modal */
.session-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.session-modal-overlay.active {
  opacity: 1;
}

.session-modal {
  background: var(--bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  width: 90%;
  max-width: 700px;
  max-height: 85vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transform: scale(0.95);
  transition: transform 0.2s ease;
}

.session-modal-overlay.active .session-modal {
  transform: scale(1);
}

.session-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-secondary);
}

.session-modal-title {
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: 600;
}

.session-id-badge {
  font-family: monospace;
  font-size: 13px;
  padding: 4px 10px;
  background: var(--accent-light);
  color: var(--accent-color);
  border-radius: var(--radius-sm);
}

.session-modal-close {
  width: 32px;
  height: 32px;
  border: none;
  background: transparent;
  font-size: 24px;
  cursor: pointer;
  color: var(--text-muted);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
}

.session-modal-close:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.session-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
}

.session-info-section,
.tasks-section,
.review-section {
  margin-bottom: 24px;
}

.session-info-section h4,
.tasks-section h4,
.review-section h4 {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12px;
  padding-bottom: 8px;
  border-bottom: 1px solid var(--border-color);
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.info-item label {
  font-size: 11px;
  color: var(--text-muted);
  text-transform: uppercase;
}

.info-item span {
  font-size: 13px;
  color: var(--text-primary);
}

.task-stats {
  display: flex;
  gap: 16px;
  margin-bottom: 12px;
}

.task-stat {
  font-size: 12px;
  padding: 4px 8px;
  border-radius: var(--radius-sm);
}

.task-stat.completed {
  background: var(--success-light);
  color: var(--success-color);
}

.task-stat.in-progress {
  background: var(--warning-light);
  color: var(--warning-color);
}

.task-stat.pending {
  background: var(--bg-hover);
  color: var(--text-muted);
}

.tasks-list-modal {
  display: flex;
  flex-direction: column;
  gap: 6px;
  max-height: 300px;
  overflow-y: auto;
}

.task-item-modal {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 12px;
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  border-left: 3px solid var(--text-muted);
}

.task-item-modal.completed {
  border-left-color: var(--success-color);
}

.task-item-modal.in_progress {
  border-left-color: var(--warning-color);
}

.task-status-icon {
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.task-item-modal.completed .task-status-icon {
  color: var(--success-color);
}

.task-item-modal.in_progress .task-status-icon {
  color: var(--warning-color);
}

.task-id-badge {
  font-family: monospace;
  font-size: 11px;
  padding: 2px 6px;
  background: var(--accent-light);
  color: var(--accent-color);
  border-radius: var(--radius-sm);
}

.task-title-modal {
  flex: 1;
  font-size: 13px;
  color: var(--text-primary);
}

.no-tasks {
  padding: 24px;
  text-align: center;
  color: var(--text-muted);
  font-style: italic;
}

.review-info {
  display: flex;
  gap: 16px;
  font-size: 13px;
  color: var(--text-secondary);
}

.session-modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  padding: 16px 20px;
  border-top: 1px solid var(--border-color);
  background: var(--bg-secondary);
}

.btn-view-raw {
  padding: 8px 16px;
  border: 1px solid var(--border-color);
  background: transparent;
  color: var(--text-secondary);
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 13px;
}

.btn-view-raw:hover {
  background: var(--bg-hover);
}

.btn-close-modal {
  padding: 8px 16px;
  border: none;
  background: var(--accent-color);
  color: white;
  border-radius: var(--radius-sm);
  cursor: pointer;
  font-size: 13px;
}

.btn-close-modal:hover {
  background: var(--accent-hover);
}

/* Sessions Grid Wrapper */
.sessions-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
  gap: 20px;
}

/* Session Detail Page */
.session-detail-page {
  background: var(--bg-card);
  border-radius: var(--radius);
  border: 1px solid var(--border-color);
  overflow: hidden;
}

.detail-header {
  padding: 20px;
  border-bottom: 1px solid var(--border-color);
}

.btn-back {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  background: transparent;
  border: 1px solid var(--border-color);
  border-radius: var(--radius-sm);
  color: var(--text-secondary);
  font-size: 13px;
  cursor: pointer;
  transition: all 0.15s ease;
  margin-bottom: 12px;
}

.btn-back:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.back-icon {
  font-size: 16px;
}

.detail-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 12px;
}

.detail-session-id {
  font-size: 20px;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
  font-family: monospace;
}

.detail-badges {
  display: flex;
  gap: 8px;
  align-items: center;
}

/* Detail Info Bar */
.detail-info-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 24px;
  padding: 16px 20px;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
}

.detail-info-bar .info-item {
  display: flex;
  flex-direction: row;
  gap: 8px;
  align-items: center;
}

.detail-info-bar .info-label {
  font-size: 12px;
  color: var(--text-muted);
  font-weight: 500;
}

.detail-info-bar .info-value {
  font-size: 13px;
  color: var(--text-primary);
}

/* Detail Tabs */
.detail-tabs {
  display: flex;
  gap: 4px;
  padding: 12px 20px;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
  overflow-x: auto;
}

.detail-tab {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 10px 16px;
  background: transparent;
  border: 1px solid transparent;
  border-radius: var(--radius-sm);
  color: var(--text-secondary);
  font-size: 13px;
  cursor: pointer;
  transition: all 0.15s ease;
  white-space: nowrap;
}

.detail-tab:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.detail-tab.active {
  background: var(--accent-light);
  color: var(--accent-color);
  border-color: var(--accent-color);
  font-weight: 500;
}

.tab-icon {
  font-size: 14px;
}

.tab-count {
  padding: 2px 6px;
  background: var(--bg-hover);
  border-radius: 10px;
  font-size: 11px;
  font-weight: 600;
}

.detail-tab.active .tab-count {
  background: rgba(255, 255, 255, 0.2);
}

/* Tab Content Area */
.detail-tab-content {
  padding: 20px;
  min-height: 300px;
}

.tab-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40px;
  color: var(--text-muted);
  font-size: 14px;
}

.tab-error {
  padding: 20px;
  background: var(--danger-light);
  color: var(--danger-color);
  border-radius: var(--radius-sm);
  font-size: 13px;
}

.tab-empty-state {
  text-align: center;
  padding: 40px 20px;
  color: var(--text-muted);
}

.tab-empty-state .empty-icon {
  font-size: 36px;
  margin-bottom: 12px;
  opacity: 0.5;
}

.tab-empty-state .empty-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 6px;
}

.tab-empty-state .empty-text {
  font-size: 13px;
}

/* Tasks Tab Content */
.tasks-tab-content {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.task-stats-bar {
  display: flex;
  gap: 12px;
  padding: 12px;
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
}

.detail-task-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  border-left: 3px solid var(--text-muted);
  overflow: hidden;
}

.detail-task-item.completed {
  border-left-color: var(--success-color);
}

.detail-task-item.in_progress {
  border-left-color: var(--warning-color);
}

.detail-task-item .task-item-header {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 16px;
}

.detail-task-item .task-status-icon {
  font-size: 14px;
  width: 20px;
  text-align: center;
}

.detail-task-item.completed .task-status-icon {
  color: var(--success-color);
}

.detail-task-item.in_progress .task-status-icon {
  color: var(--warning-color);
}

.detail-task-item .task-title {
  flex: 1;
  font-size: 13px;
  color: var(--text-primary);
}

/* Context Tab Content */
.context-tab-content {
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.json-content {
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  font-size: 12px;
  line-height: 1.6;
  padding: 16px;
  margin: 0;
  white-space: pre-wrap;
  word-break: break-word;
  color: var(--text-secondary);
  max-height: 500px;
  overflow-y: auto;
}

/* Summary Tab Content */
.summary-tab-content {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.summary-item {
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.summary-header {
  padding: 12px 16px;
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  background: var(--bg-hover);
  border-bottom: 1px solid var(--border-color);
}

.summary-content {
  padding: 16px;
  font-size: 13px;
  line-height: 1.6;
  color: var(--text-secondary);
  white-space: pre-wrap;
}

/* IMPL Plan Tab Content */
.impl-plan-tab-content {
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.markdown-content {
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  font-size: 13px;
  line-height: 1.7;
  padding: 16px;
  margin: 0;
  white-space: pre-wrap;
  word-break: break-word;
  color: var(--text-secondary);
  max-height: 600px;
  overflow-y: auto;
}

/* Review Tab Content */
.review-tab-content {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.review-dimension-section {
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.review-dimension-section .dimension-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14px 16px;
  background: var(--bg-hover);
  border-bottom: 1px solid var(--border-color);
}

.dimension-name {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
  text-transform: capitalize;
}

.dimension-findings {
  padding: 12px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.finding-header {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 6px;
}

.finding-severity {
  padding: 2px 8px;
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  border-radius: 10px;
}

.finding-severity.critical {
  background: var(--danger-light);
  color: var(--danger-color);
}

.finding-severity.high {
  background: var(--warning-light);
  color: var(--warning-color);
}

.finding-severity.medium {
  background: var(--info-light);
  color: var(--info-color);
}

.finding-severity.low {
  background: var(--bg-hover);
  color: var(--text-muted);
}

.finding-title {
  font-size: 13px;
  font-weight: 500;
  color: var(--text-primary);
}

.finding-description {
  font-size: 13px;
  color: var(--text-secondary);
  line-height: 1.5;
  margin: 0;
}

.finding-file {
  font-size: 12px;
  font-family: monospace;
  color: var(--text-muted);
  margin-top: 6px;
}

/* Responsive */
@media (max-width: 768px) {
  .sessions-grid {
    grid-template-columns: 1fr;
  }

  .detail-title-row {
    flex-direction: column;
    align-items: flex-start;
  }

  .detail-info-bar {
    flex-direction: column;
    gap: 12px;
  }

  .detail-tabs {
    padding: 8px 12px;
  }

  .detail-tab {
    padding: 8px 12px;
  }

  .tab-text {
    display: none;
  }

  .task-stats-bar {
    flex-wrap: wrap;
  }
}

/* Full Task Detail View */
.detail-task-item-full {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  margin-bottom: 16px;
  overflow: hidden;
}

.detail-task-item-full.completed {
  border-left: 3px solid var(--success-color);
}

.detail-task-item-full.in_progress {
  border-left: 3px solid var(--warning-color);
}

.detail-task-item-full.pending {
  border-left: 3px solid var(--text-muted);
}

.task-item-header-full {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 14px 16px;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
}

/* Implementation Steps */
.impl-steps {
  padding-left: 20px;
  margin: 0;
}

.impl-steps li {
  padding: 6px 0;
  color: var(--text-secondary);
  font-size: 13px;
  line-height: 1.5;
}

/* Collapsible Summary Items */
.summary-item-collapsible {
  background: var(--bg-card);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  margin-bottom: 12px;
  overflow: hidden;
}

.summary-collapsible-header {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 12px 16px;
  background: var(--bg-secondary);
  cursor: pointer;
  user-select: none;
  transition: background 0.15s ease;
}

.summary-collapsible-header:hover {
  background: var(--bg-hover);
}

.summary-collapsible-header.expanded {
  border-bottom: 1px solid var(--border-color);
}

.summary-name {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-primary);
}

.summary-preview {
  flex: 1;
  font-size: 12px;
  color: var(--text-muted);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400px;
}

.summary-collapsible-content {
  max-height: 600px;
  overflow-y: auto;
  transition: max-height 0.3s ease, padding 0.3s ease;
}

.summary-collapsible-content.collapsed {
  max-height: 0;
  overflow: hidden;
}

.summary-content-pre {
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  font-size: 12px;
  line-height: 1.6;
  padding: 16px;
  margin: 0;
  white-space: pre-wrap;
  word-break: break-word;
  color: var(--text-secondary);
  background: var(--bg-card);
}

/* ==========================================
   REVIEW SESSION DETAIL PAGE STYLES
   ========================================== */

.session-type-review .review-progress-section,
.session-type-fix .fix-progress-section {
  background: var(--bg-card);
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 24px;
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow);
}

.review-progress-header,
.fix-progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.review-progress-header h3,
.fix-progress-header h3 {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-primary);
  display: flex;
  align-items: center;
  gap: 8px;
}

.phase-badge {
  display: inline-block;
  padding: 6px 14px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.phase-badge.planning,
.phase-badge.in-progress {
  background: rgba(59, 130, 246, 0.15);
  color: var(--accent-color);
}

.phase-badge.execution {
  background: rgba(139, 92, 246, 0.15);
  color: #8b5cf6;
  animation: pulse 2s infinite;
}

.phase-badge.completion,
.phase-badge.completed {
  background: rgba(34, 197, 94, 0.15);
  color: var(--success-color);
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

/* Summary Cards Grid */
.review-summary-grid,
.fix-summary-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
  gap: 16px;
  margin-bottom: 24px;
}

.summary-card {
  background: var(--bg-secondary);
  border-radius: 10px;
  padding: 20px;
  text-align: center;
  border: 2px solid var(--border-color);
  transition: all 0.2s ease;
}

.summary-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow);
}

.summary-card.critical {
  border-color: var(--danger-color);
}

.summary-card.critical .summary-value {
  color: var(--danger-color);
}

.summary-card.high {
  border-color: var(--warning-color);
}

.summary-card.high .summary-value {
  color: var(--warning-color);
}

.summary-card.fixed {
  border-color: var(--success-color);
}

.summary-card.fixed .summary-value {
  color: var(--success-color);
}

.summary-card.failed {
  border-color: var(--danger-color);
}

.summary-card.failed .summary-value {
  color: var(--danger-color);
}

.summary-card.pending {
  border-color: var(--warning-color);
}

.summary-card.pending .summary-value {
  color: var(--warning-color);
}

.summary-icon {
  font-size: 2rem;
  margin-bottom: 8px;
}

.summary-value {
  font-size: 2rem;
  font-weight: 800;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.summary-label {
  font-size: 0.85rem;
  color: var(--text-secondary);
  font-weight: 500;
}

/* Dimension Timeline */
.dimension-timeline {
  display: flex;
  gap: 12px;
  overflow-x: auto;
  padding: 8px 4px;
  margin-bottom: 16px;
}

.dimension-item {
  flex: 0 0 auto;
  min-width: 120px;
  padding: 14px;
  background: var(--bg-secondary);
  border-radius: 8px;
  border: 2px solid var(--border-color);
  text-align: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.dimension-item:hover {
  border-color: var(--accent-color);
}

.dimension-item.completed {
  border-color: var(--success-color);
  background: rgba(34, 197, 94, 0.05);
}

.dimension-item.in-progress {
  border-color: var(--accent-color);
  box-shadow: 0 0 12px rgba(59, 130, 246, 0.3);
}

.dimension-number {
  font-size: 0.75rem;
  font-weight: 700;
  color: var(--text-secondary);
  margin-bottom: 4px;
}

.dimension-name {
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dimension-stats {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

/* Stage Timeline */
.stage-timeline {
  display: flex;
  gap: 12px;
  overflow-x: auto;
  padding: 8px 4px;
  margin-top: 20px;
}

.stage-item {
  flex: 0 0 auto;
  min-width: 140px;
  padding: 14px;
  background: var(--bg-secondary);
  border-radius: 8px;
  border: 2px solid var(--border-color);
  text-align: center;
  transition: all 0.2s ease;
  position: relative;
}

.stage-item::after {
  content: '‚Üí';
  position: absolute;
  right: -20px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-secondary);
  font-size: 1.2rem;
}

.stage-item:last-child::after {
  display: none;
}

.stage-item.completed {
  border-color: var(--success-color);
  background: rgba(34, 197, 94, 0.05);
}

.stage-item.in-progress {
  border-color: var(--accent-color);
  box-shadow: 0 0 12px rgba(59, 130, 246, 0.3);
  transform: scale(1.02);
}

.stage-number {
  font-size: 0.8rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.stage-mode {
  font-size: 0.75rem;
  color: var(--text-secondary);
  margin-bottom: 4px;
}

.stage-groups {
  font-size: 0.7rem;
  color: var(--text-secondary);
}

/* Fix Progress Bar */
.fix-progress-bar {
  height: 12px;
  background: var(--bg-secondary);
  border-radius: 6px;
  overflow: hidden;
  margin-bottom: 12px;
}

.fix-progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--success-color), #22c55e);
  border-radius: 6px;
  transition: width 0.5s ease;
  position: relative;
  overflow: hidden;
}

.fix-progress-bar-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.progress-text {
  text-align: center;
  font-size: 0.9rem;
  color: var(--text-secondary);
  margin-bottom: 20px;
}

.progress-text strong {
  color: var(--text-primary);
}

/* Findings Section */
.review-findings-section,
.fix-tasks-section {
  background: var(--bg-card);
  border-radius: 12px;
  padding: 24px;
  margin-bottom: 24px;
  border: 1px solid var(--border-color);
}

.findings-header,
.tasks-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  flex-wrap: wrap;
  gap: 12px;
}

.findings-header h3,
.tasks-header h3 {
  font-size: 1.15rem;
  font-weight: 600;
  color: var(--text-primary);
}

.findings-filters,
.task-filters {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 6px 14px;
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: 6px;
  font-size: 0.8rem;
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.2s ease;
}

.filter-btn:hover {
  border-color: var(--accent-color);
  color: var(--text-primary);
}

.filter-btn.active {
  background: var(--accent-color);
  color: white;
  border-color: var(--accent-color);
}

/* Findings Grid */
.findings-grid {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.dimension-findings-group {
  border: 1px solid var(--border-color);
  border-radius: 10px;
  overflow: hidden;
}

.dimension-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
}

.dimension-badge {
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--accent-color);
  text-transform: capitalize;
}

.dimension-count {
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.findings-cards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 12px;
  padding: 16px;
}

.finding-card {
  background: var(--bg-secondary);
  border-radius: 8px;
  padding: 14px;
  border-left: 4px solid var(--border-color);
  transition: all 0.2s ease;
}

.finding-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow);
}

.finding-card.severity-critical {
  border-left-color: var(--danger-color);
}

.finding-card.severity-high {
  border-left-color: var(--warning-color);
}

.finding-card.severity-medium {
  border-left-color: var(--accent-color);
}

.finding-card.severity-low {
  border-left-color: var(--success-color);
}

.finding-card-header {
  display: flex;
  gap: 8px;
  align-items: center;
  margin-bottom: 8px;
}

.severity-badge {
  padding: 3px 8px;
  border-radius: 10px;
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
}

.severity-badge.critical {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger-color);
}

.severity-badge.high {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning-color);
}

.severity-badge.medium {
  background: rgba(59, 130, 246, 0.15);
  color: var(--accent-color);
}

.severity-badge.low {
  background: rgba(34, 197, 94, 0.15);
  color: var(--success-color);
}

.fix-status-badge {
  padding: 3px 8px;
  border-radius: 10px;
  font-size: 0.65rem;
  font-weight: 700;
  text-transform: uppercase;
}

.fix-status-badge.status-fixed {
  background: rgba(34, 197, 94, 0.15);
  color: var(--success-color);
}

.fix-status-badge.status-failed {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger-color);
}

.fix-status-badge.status-in-progress {
  background: rgba(59, 130, 246, 0.15);
  color: var(--accent-color);
}

.finding-card-title {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6px;
}

.finding-card-desc {
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-bottom: 8px;
  line-height: 1.4;
}

.finding-card-file {
  font-size: 0.75rem;
  color: var(--text-secondary);
  font-family: 'SF Mono', Monaco, monospace;
  padding: 4px 8px;
  background: var(--bg-card);
  border-radius: 4px;
  display: inline-block;
}

/* Fix Tasks Grid */
.fix-tasks-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 16px;
}

.fix-task-card {
  background: var(--bg-secondary);
  border-radius: 10px;
  padding: 16px;
  border: 2px solid var(--border-color);
  transition: all 0.2s ease;
  cursor: pointer;
}

.fix-task-card:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow);
}

.fix-task-card.status-pending {
  border-left: 4px solid var(--warning-color);
}

.fix-task-card.status-in_progress {
  border-left: 4px solid var(--accent-color);
  box-shadow: 0 0 12px rgba(59, 130, 246, 0.15);
}

.fix-task-card.status-fixed,
.fix-task-card.status-completed {
  border-left: 4px solid var(--success-color);
  opacity: 0.9;
}

.fix-task-card.status-failed {
  border-left: 4px solid var(--danger-color);
}

.task-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.task-id-badge {
  font-size: 0.7rem;
  font-family: 'SF Mono', Monaco, monospace;
  color: var(--text-secondary);
  background: var(--bg-card);
  padding: 2px 6px;
  border-radius: 4px;
}

.task-status-badge {
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 0.7rem;
  font-weight: 700;
  text-transform: uppercase;
}

.task-status-badge.pending {
  background: rgba(245, 158, 11, 0.15);
  color: var(--warning-color);
}

.task-status-badge.in_progress {
  background: rgba(59, 130, 246, 0.15);
  color: var(--accent-color);
}

.task-status-badge.fixed,
.task-status-badge.completed {
  background: rgba(34, 197, 94, 0.15);
  color: var(--success-color);
}

.task-status-badge.failed {
  background: rgba(239, 68, 68, 0.15);
  color: var(--danger-color);
}

.task-card-title {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8px;
  line-height: 1.4;
}

.task-finding {
  font-size: 0.85rem;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.task-file {
  font-size: 0.75rem;
  color: var(--text-secondary);
  font-family: 'SF Mono', Monaco, monospace;
  padding: 4px 8px;
  background: var(--bg-card);
  border-radius: 4px;
  display: inline-block;
  margin-bottom: 10px;
}

.task-card-meta {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  font-size: 0.75rem;
  color: var(--text-secondary);
}

.task-dimension {
  padding: 2px 8px;
  background: rgba(139, 92, 246, 0.1);
  color: #8b5cf6;
  border-radius: 8px;
  font-weight: 500;
}

.task-attempts {
  color: var(--warning-color);
  font-weight: 600;
}

.task-commit {
  font-family: 'SF Mono', Monaco, monospace;
}

/* =====================================================
   Task Detail Drawer - Half Screen (50vw) Slide-out Panel
   ===================================================== */

.task-detail-drawer {
  position: fixed;
  right: -52vw;
  top: 0;
  width: 50vw;
  min-width: 600px;
  max-width: 900px;
  height: 100vh;
  background: var(--bg-card);
  box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
  transition: right 0.3s ease;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.task-detail-drawer.open {
  right: 0;
}

.drawer-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease;
  z-index: 999;
}

.drawer-overlay.active {
  opacity: 1;
  visibility: visible;
}

/* Drawer Header */
.drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-secondary);
  flex-shrink: 0;
}

.drawer-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
}

.drawer-close {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: var(--text-secondary);
  cursor: pointer;
  padding: 4px 8px;
  border-radius: 4px;
  transition: all 0.2s ease;
}

.drawer-close:hover {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

/* Drawer Content */
.drawer-content {
  flex: 1;
  overflow-y: auto;
  padding: 0;
}

/* Drawer Task Header */
.drawer-task-header {
  display: flex;
  gap: 12px;
  align-items: center;
  padding: 16px 20px;
  background: var(--bg-secondary);
  border-bottom: 1px solid var(--border-color);
}

.task-id-badge {
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.85rem;
  padding: 4px 10px;
  background: rgba(139, 92, 246, 0.15);
  color: #8b5cf6;
  border-radius: 6px;
  font-weight: 500;
}

.drawer-task-header .task-status-badge {
  font-size: 0.8rem;
  padding: 4px 10px;
  border-radius: 6px;
  font-weight: 500;
  text-transform: capitalize;
}

/* Drawer Tabs */
.drawer-tabs {
  display: flex;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-card);
  padding: 0 20px;
}

.drawer-tab {
  padding: 12px 16px;
  background: none;
  border: none;
  font-size: 0.9rem;
  color: var(--text-secondary);
  cursor: pointer;
  border-bottom: 2px solid transparent;
  margin-bottom: -1px;
  transition: all 0.2s ease;
}

.drawer-tab:hover {
  color: var(--text-primary);
  background: var(--bg-secondary);
}

.drawer-tab.active {
  color: var(--accent-color);
  border-bottom-color: var(--accent-color);
  font-weight: 500;
}

/* Drawer Tab Content */
.drawer-tab-content {
  padding: 0;
}

.drawer-panel {
  display: none;
  padding: 20px;
}

.drawer-panel.active {
  display: block;
}

/* Pre-Analysis Section */
.pre-analysis-section {
  margin-bottom: 24px;
}

.pre-analysis-section h4,
.impl-steps-section h4,
.target-files-section h4,
.test-commands-section h4 {
  font-size: 0.95rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 12px 0;
  padding-bottom: 8px;
  border-bottom: 1px solid var(--border-color);
}

/* Step Items */
.steps-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.step-item {
  display: flex;
  gap: 12px;
  padding: 12px;
  background: var(--bg-secondary);
  border-left: 3px solid var(--accent-color);
  border-radius: 0 8px 8px 0;
}

.step-badge {
  width: 28px;
  height: 28px;
  min-width: 28px;
  border-radius: 50%;
  background: var(--accent-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.75rem;
}

.step-content {
  flex: 1;
  min-width: 0;
}

.step-name {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.9rem;
  margin-bottom: 4px;
}

.step-action {
  font-size: 0.85rem;
  color: var(--text-secondary);
  margin-bottom: 6px;
  line-height: 1.5;
}

.step-commands {
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-top: 8px;
}

.step-commands code {
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.75rem;
  padding: 4px 8px;
  background: var(--bg-tertiary);
  border-radius: 4px;
  color: var(--text-primary);
  display: block;
  word-break: break-all;
}

.step-output {
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-top: 6px;
}

.step-output code {
  background: var(--bg-tertiary);
  padding: 2px 6px;
  border-radius: 3px;
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.75rem;
}

/* Implementation Steps (Enhanced Grid Layout) */
.impl-steps-section {
  margin-bottom: 24px;
}

.impl-steps-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.impl-step-item {
  background: var(--bg-secondary);
  border-radius: 8px;
  border: 1px solid var(--border-color);
  overflow: hidden;
}

.impl-step-item:hover {
  border-color: var(--accent-color);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.impl-step-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: var(--bg-tertiary);
  border-bottom: 1px solid var(--border-color);
}

.impl-step-number {
  padding: 4px 10px;
  background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
  color: white;
  font-weight: 600;
  font-size: 0.8rem;
  border-radius: 6px;
  white-space: nowrap;
}

.impl-step-title {
  font-weight: 600;
  color: var(--text-primary);
  font-size: 0.95rem;
  flex: 1;
}

.impl-step-desc {
  padding: 10px 16px;
  font-size: 0.85rem;
  color: var(--text-secondary);
  line-height: 1.5;
  border-bottom: 1px solid var(--border-color);
}

/* Three-column grid for Modifications and Logic Flow */
.impl-step-columns {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1px;
  background: var(--border-color);
}

.impl-step-mods,
.impl-step-flow {
  padding: 12px 16px;
  background: var(--bg-card);
}

.impl-step-mods strong,
.impl-step-flow strong {
  display: block;
  font-size: 0.8rem;
  color: var(--text-secondary);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.impl-step-mods ul,
.impl-step-flow ol {
  margin: 0;
  padding-left: 18px;
  font-size: 0.85rem;
  line-height: 1.6;
}

.impl-step-mods li,
.impl-step-flow li {
  margin-bottom: 4px;
  color: var(--text-primary);
}

.impl-step-mods code {
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.75rem;
  padding: 2px 6px;
  background: var(--bg-tertiary);
  border-radius: 3px;
  color: var(--accent-color);
}

.impl-step-deps {
  padding: 10px 16px;
  background: var(--bg-card);
  border-top: 1px solid var(--border-color);
  font-size: 0.8rem;
  color: var(--text-secondary);
}

.dep-badge {
  display: inline-block;
  padding: 2px 8px;
  background: rgba(249, 115, 22, 0.1);
  color: var(--warning-color);
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 500;
  margin-left: 4px;
}

.drawer-section {
  margin-bottom: 20px;
}

.drawer-section-title {
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0 0 12px 0;
  padding-bottom: 8px;
  border-bottom: 1px solid var(--border-color);
}

.empty-section {
  padding: 20px;
  text-align: center;
  color: var(--text-secondary);
  background: var(--bg-secondary);
  border-radius: 8px;
}

.target-files-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.target-files-list li {
  padding: 8px 12px;
  background: var(--bg-secondary);
  border-radius: 6px;
  margin-bottom: 6px;
}

.target-files-list li code {
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.8rem;
  color: var(--text-primary);
}

/* File Links with VS Code integration */
.file-item {
  padding: 0;
  margin-bottom: 6px;
}

.file-link {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 14px;
  background: var(--bg-secondary);
  border-radius: 6px;
  text-decoration: none;
  color: inherit;
  transition: all 0.2s ease;
  border: 1px solid transparent;
}

.file-link:hover {
  background: var(--bg-tertiary);
  border-color: var(--accent-color);
  transform: translateX(4px);
}

.file-link .file-icon {
  font-size: 1rem;
  opacity: 0.7;
}

.file-link code {
  flex: 1;
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.8rem;
  color: var(--accent-color);
  word-break: break-all;
}

.file-link .file-action {
  font-size: 0.8rem;
  opacity: 0;
  transition: opacity 0.2s ease;
  color: var(--accent-color);
}

.file-link:hover .file-action {
  opacity: 1;
}

/* Target Files Section */
.target-files-section {
  margin-bottom: 24px;
}

.file-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.file-list li {
  padding: 8px 12px;
  background: var(--bg-secondary);
  border-radius: 6px;
  margin-bottom: 6px;
  font-size: 0.85rem;
}

.file-list li code {
  font-family: 'SF Mono', Monaco, monospace;
  color: var(--text-primary);
}

/* Test Commands Section */
.test-commands-section {
  margin-bottom: 24px;
}

.test-commands-list {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.test-command {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 12px;
  background: var(--bg-secondary);
  border-radius: 6px;
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.8rem;
  color: var(--text-primary);
}

.test-command-icon {
  color: var(--success-color);
}

/* Flowchart Container */
.flowchart-container {
  min-height: 400px;
  padding: 20px 10px;
  overflow-y: auto;
  background: var(--bg-secondary);
  border-radius: 8px;
}

.flowchart-container svg {
  width: 100%;
  display: block;
}

/* Flowchart Node Styles */
.flowchart-node {
  cursor: pointer;
}

.flowchart-node rect {
  transition: all 0.2s ease;
}

.flowchart-node:hover rect {
  filter: brightness(1.05);
  stroke-width: 3px;
}

.flowchart-node text {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* Flowchart Arrow Marker */
.flowchart-arrow {
  fill: var(--border-color);
}

/* Raw JSON View */
.json-view {
  background: var(--bg-secondary);
  border-radius: 8px;
  padding: 16px;
  font-family: 'SF Mono', Monaco, monospace;
  font-size: 0.75rem;
  line-height: 1.6;
  color: var(--text-primary);
  overflow-x: auto;
  white-space: pre-wrap;
  word-break: break-word;
  max-height: 600px;
  overflow-y: auto;
}

/* Empty State in Drawer */
.drawer-empty-state {
  text-align: center;
  padding: 40px 20px;
  color: var(--text-secondary);
}

.drawer-empty-state .empty-icon {
  font-size: 2rem;
  margin-bottom: 10px;
}

/* Responsive Drawer */
@media (max-width: 1200px) {
  .task-detail-drawer {
    width: 60vw;
    right: -62vw;
    min-width: 500px;
  }
}

@media (max-width: 768px) {
  .task-detail-drawer {
    width: 100%;
    right: -100%;
    min-width: unset;
    max-width: unset;
  }

  .drawer-tabs {
    overflow-x: auto;
    padding: 0 12px;
  }

  .drawer-tab {
    padding: 10px 12px;
    font-size: 0.85rem;
    white-space: nowrap;
  }

  .drawer-panel {
    padding: 16px;
  }
}
